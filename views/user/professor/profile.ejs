<div class="wrapper" style="width: 1200px; margin: 0 auto;">
    <div class="container-fluid" style="justify-content: center; 
    padding: 30px 30px 25px; background: #fff;
    border-radius: 0px; position: static;">

        <div style="display: flex;">

            <div class="main-content" style="margin-left: 40px;">
                <!-- <p style="font-size: 28px">My Profile</p> -->

                <h3 style="color: #333333;
            font-size: 32px;
            font-weight: bold; margin-top: 0px;
            margin-bottom: 5px;">My Profile</h3>

                <h5 style="-webkit-tap-highlight-color: transparent;
            box-sizing: border-box;
            margin-top: 10px;
            font-weight: 400;
            font-family: inherit;
            color: #99a5ab;
            font-size: 16px;
            line-height: 20px;
            margin-bottom: 20px!important;
            ">Personal information that cannot be viewed by other users</h5>

                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#home">Profile Info</a></li>
                    <li><a data-toggle="tab" href="#menu1">Change Password</a></li>
                </ul>

                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">
                        <br>
                        <form id="myProfile" action="/user/admin/updateInfo" method="POST">
                            <div class="row" style="width: 600px;">
                                <div id="div01" class="form-group col-xl-12 col-12">
                                    <label style="color: #666666">Email Address</label>
                                    <input type="text" class="form-inputs" name="Email"
                                        value="<%= req.session.user.Email %>" required>
                                </div>

                                <div id="div02" class="form-group col-xl-6 col-12">
                                    <label style="color: #666666">First Name</label>
                                    <input type="text" class="form-inputs" name="GivenName"
                                        value="<%= req.session.user.GivenName %>"
                                        onkeyup="value=value.replace(/[^\a-\z\A-\Z\ ]/g,'')">
                                </div>

                                <div id="div04" class="form-group col-xl-6 col-12">
                                    <label style="color: #666666">Last Name</label>
                                    <input type="text" class="form-inputs" name="Surname"
                                        value="<%= req.session.user.Surname %>"
                                        onkeyup="value=value.replace(/[^\a-\z\A-\Z\ ]/g,'')">
                                </div>
                            </div>

                            <div>
                                <button type="submit" id="submitBtn" class="btn btn-primary"><b>Save</b></button>
                            </div>
                        </form>
                    </div>

                    <div id="menu1" class="tab-pane fade">
                        <br>
                        <form id="changePassword" action="/user/admin/changePassword" method="POST">
                            <div class="row" style="width: 600px;">
                                <div id="div01" class="form-group col-xl-12 col-12">
                                    <label style="color: #666666">Current Password</label>
                                    <input style="width: 360px;" type="password" class="form-inputs"
                                        placeholder="Password" name="currentPw" required>
                                </div>

                                <div id="div02" class="form-group col-xl-12 col-12">
                                    <label style="color: #666666">New Password </label>
                                    <input style="width: 360px;" type="password" class="form-inputs"
                                        placeholder="Password" name="Password" required>
                                </div>

                                <div id="div04" class="form-group col-xl-12 col-12">
                                    <label style="color: #666666">Retype New Password</label>
                                    <input style="width: 360px;" type="password" class="form-inputs"
                                        placeholder="Password" name="ConfirmPassword" onblur="validateConfirmPassword()"
                                        required>
                                </div>
                            </div>

                            <div>
                                <button type="submit" id="submitBtn" class="btn btn-primary"><b>Save</b></button>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>