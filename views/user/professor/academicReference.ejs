<div class="wrapper" style="width: 1310px; margin: 0 auto;">
    <div class="container-fluid" style="justify-content: center; 
    padding: 30px 15px 25px; background: #fff;
    border-radius: 0px; position: static;">

        <div style="display: flex;">

            <div class="main-content" style="margin-left: 40px;">

                <div class="row" style="margin-left: 0px; clear: both">
                    <!-- send email button -->
                    <a id="redirect-link" style="color: #333333;" href="/user/professor/applications/all">
                        <button class="form-control btn-lg" id="backToDataTable">
                            << See all applications </button>
                    </a>
                </div>

                <br>
                <article class="page">
                    <div style="display: flex;">

                        <nav class="main-nav">
                            <ul class="main-nav-ul">
                                <li class="menu-left_item lv1"><a
                                        href="/user/professor/applications/details/<%= application.id%>"><span
                                            class="sub-arrow">Personal
                                            Particulars</span></a></li>

                                <li class="menu-left_item lv1"><a
                                        href="/user/professor/applications/details/academicProfile/<%= application.id%>">Academic
                                        Profile<span class="sub-arrow"></span></a>
                                </li>
                                <li class="menu-left_item lv1"><a
                                        href="/user/professor/applications/details/academicQualification/<%= application.id%>"><span
                                            class="sub-arrow">Academic
                                            Qualification</span></a>
                                </li>
                                <li class="menu-left_item lv1"><a class="active"
                                        href="/user/professor/applications/details/academicReference/<%= application.id%>"><span
                                            class="sub-arrow">Academic Reference</span></a>
                                </li>
                                <li class="menu-left_item lv1"><a
                                        href="/user/professor/applications/details/otherInformation/<%= application.id%>"><span
                                            class="sub-arrow">Other
                                            Information</span></a>
                                </li>
                            </ul>
                        </nav>

                        <div id="academicReference" action="/forms/academicReference" method="POST">

                            <div class="main-content" style="margin-left: 40px">
                                <h3 style="color: #666666;
                                        font-size: 24px;
                                        font-weight: bold;
                                        margin-bottom: 5px;">Academic Reference</h3>

                                <p style="width: 800px; padding-top: 5px; margin-right: 20px; color: #444444;"> Please provide
                                    information of no
                                    more than 2
                                    referees upon receipt of their consent.
                                    Nominated referee(s) will be invited by email
                                    to submit the reference via the Online
                                    Reference Upload System. Alternatively, you
                                    may upload reference letter(s) via the
                                    “Supporting Documents” section.
                                </p>

                                <table style="color: #333333; width: 800px; margin-top: 0px;">
                                    <tr>
                                        <td colspan="4" style="padding-left: 12px; background: #C8D8CC; margin-top: 15px; width: 800px; padding-top: 1px;
                                    margin-left: 0px;">Referee Information</td>
                                    </tr>
                                    <tr style="background-color: #f6f6f6">
                                        <td width="15%" style="text-align: center; padding: 5px 0;">Relationship</td>
                                        <td width="21%" style="text-align: center;">Name</td>
                                        <td width="27%" style="text-align: center;">Email</td>
                                        <td width="37%" style="text-align: center;">Description</td>
                                    </tr>
                                    <tr>
                                        <td class="table-content">
                                            <input type="text" class="form-control" name="AcademicReference[relationship1]"
                                                style="height: 26px; width: 100%; margin-top: 3px; margin-bottom: 3px; padding: 3px;"
                                                <% if(application.academicReferenceData !=null &&
                                                application.academicReferenceData.AcademicReference.relationship1 !=null) { %>
                                            value="<%=application.academicReferenceData.AcademicReference.relationship1%>" <% } %>
                                                    />
                                        </td>
                                        <td class="table-content">
                                            <input type="text" class="form-control" name="AcademicReference[refName1]"
                                                style="height: 26px; width: 100%; margin-top: 3px; margin-bottom: 3px; padding: 3px;"
                                                <% if(application.academicReferenceData !=null &&
                                                application.academicReferenceData.AcademicReference.refName1 !=null) { %>
                                            value="<%=application.academicReferenceData.AcademicReference.refName1%>" <% } %>
                                                    />
                                        </td>
                                        <td class="table-content">
                                            <input type="text" class="form-control" name="AcademicReference[email1]"
                                                style="height: 26px; width: 100%; margin-top: 3px; margin-bottom: 3px; padding: 3px;" 
                                                <% if(application.academicReferenceData !=null &&
                                                application.academicReferenceData.AcademicReference.email1 !=null) { %>
                                            value="<%=application.academicReferenceData.AcademicReference.email1%>" <% } %>
                                            />
                                        </td>
                                        <td class="table-content">
                                            <input type="text" class="form-control" name="AcademicReference[description1]"
                                                style="height: 26px; width: 100%; margin-top: 3px; margin-bottom: 3px; padding: 3px;" 
                                                <% if(application.academicReferenceData !=null &&
                                                application.academicReferenceData.AcademicReference.description1 !=null) { %>
                                            value="<%=application.academicReferenceData.AcademicReference.description1%>" <% } %>
                                            />
                                        </td>
                                    </tr>
            
                                    <tr>
                                        <td class="table-content">
                                            <input type="text" class="form-control" name="AcademicReference[relationship2]"
                                                style="height: 26px; width: 100%; margin-top: 3px; margin-bottom: 3px; padding: 3px;" 
                                                <% if(application.academicReferenceData !=null &&
                                                application.academicReferenceData.AcademicReference.relationship2 !=null) { %>
                                            value="<%=application.academicReferenceData.AcademicReference.relationship2%>" <% } %>
                                            />
                                        </td>
                                        <td class="table-content">
                                            <input type="text" class="form-control" name="AcademicReference[refName2]"
                                                style="height: 26px; width: 100%; margin-top: 3px; margin-bottom: 3px; padding: 3px;" 
                                                <% if(application.academicReferenceData !=null &&
                                                application.academicReferenceData.AcademicReference.refName2 !=null) { %>
                                            value="<%=application.academicReferenceData.AcademicReference.refName2%>" <% } %>
                                            />
                                        </td>
                                        <td class="table-content">
                                            <input type="text" class="form-control" name="AcademicReference[email2]"
                                                style="height: 26px; width: 100%; margin-top: 3px; margin-bottom: 3px; padding: 3px;" 
                                                <% if(application.academicReferenceData !=null &&
                                                application.academicReferenceData.AcademicReference.email2 !=null) { %>
                                            value="<%=application.academicReferenceData.AcademicReference.email2%>" <% } %>
                                            />
                                        </td>
                                        <td class="table-content">
                                            <input type="text" class="form-control" name="AcademicReference[description2]"
                                                style="height: 26px; width: 100%; margin-top: 3px; margin-bottom: 3px; padding: 3px;" 
                                                <% if(application.academicReferenceData !=null &&
                                                application.academicReferenceData.AcademicReference.description2 !=null) { %>
                                            value="<%=application.academicReferenceData.AcademicReference.description2%>" <% } %>
                                            />
                                        </td>
                                    </tr>
                                </table>

                                <div>
                                    <br>
                                    <!-- Previous -->
                                    <a href="/user/professor/applications/details/academicQualification/<%= application.id%>">
                                        <button id="prevBtn" class="btn btn-primary">
                                            <b>
                                                << Previous</b></button></a>

                                    <!-- Next -->
                                    <a href="/user/professor/applications/details/otherInformation/<%= application.id%>">
                                        <button id="nextBtn" class="btn btn-primary"><b>Next
                                                Page >></b></button>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </article>


            </div>
        </div>
    </div>
</div>