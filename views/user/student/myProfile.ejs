            <div class="main-content" style="margin-left: 40px">
                <h3 style="color: #333333;
                            font-size: 24px;
                            font-weight: bold;
                            margin-top: 0px;
                            margin-bottom: 5px;">My Profile</h3>

                <h5 style="-webkit-tap-highlight-color: transparent;
                box-sizing: border-box;
                margin-top: 10px;
                font-weight: 400;
                font-family: inherit;
                color: #99a5ab;
                font-size: 16px;
                line-height: 20px;
                margin-bottom: 20px!important;
                ">Personal information that cannot be viewed by other users</h5>

                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#home">Profile Info</a></li>
                    <li><a data-toggle="tab" href="#menu1">Change Password</a></li>
                </ul>

                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">
                        <br>
                        <form id="myProfile" action="/user/updateInfo" method="POST" onsubmit="submitForm(this); return false">
                            <div class="row" style="width: 600px;">
                                <div id="div01" class="form-group col-xl-12 col-12">
                                    <label style="color: #666666">Email Address</label>
                                    <input type="text" class="form-control form-inputs" name="Email"
                                        value="<%= req.session.user.Email %>" disabled>
                                </div>

                                <div id="div02" class="form-group col-xl-6 col-12">
                                    <label style="color: #666666">First Name</label>
                                    <input type="text" class="form-inputs" name="GivenName"
                                        value="<%= req.session.user.GivenName %>"
                                        onkeyup="value=value.replace(/[^\a-\z\A-\Z\ ]/g,'')">
                                </div>

                                <div id="div04" class="form-group col-xl-6 col-12">
                                    <label style="color: #666666">Last Name</label>
                                    <input type="text" class="form-inputs" name="Surname"
                                        value="<%= req.session.user.Surname %>"
                                        onkeyup="value=value.replace(/[^\a-\z\A-\Z\ ]/g,'')">
                                </div>
                            </div>

                            <div>
                                <button type="submit" id="submitBtn" class="btn btn-primary"><b>Save</b></button>
                            </div>
                        </form>
                    </div>

                    <div id="menu1" class="tab-pane fade">
                        <br>
                        <form id="changePassword" action="/user/changePassword" method="POST" onsubmit="submitForm(this); return false">
                            <div class="row" style="width: 600px;">
                                <div id="div01" class="form-group col-xl-12 col-12">
                                    <label style="color: #666666">Current Password</label>
                                    <input style="width: 360px;" type="password" class="form-inputs" placeholder="Password" name="currentPw" required>
                                </div>

                                <div id="div02" class="form-group col-xl-12 col-12">
                                    <label style="color: #666666">New Password </label>
                                    <input style="width: 360px;" type="password" class="form-inputs" placeholder="Password" name="Password" required>
                                </div>

                                <div id="div04" class="form-group col-xl-12 col-12">
                                    <label style="color: #666666">Retype New Password</label>
                                    <input style="width: 360px;" type="password" class="form-inputs" placeholder="Password" name="ConfirmPassword" onblur="validateConfirmPassword()" required>
                                </div>
                            </div>

                            <div>
                                <button type="submit" id="submitBtn" class="btn btn-primary"><b>Save</b></button>
                            </div>
                        </form>
                    </div>

                </div>
    </article>
</div>

<script>
    async function submitForm(oFormElement) {

        var response = await fetch(oFormElement.action, {
            method: oFormElement.method,
            credentials: 'same-origin',
            body: new FormData(oFormElement),
        });

        if (response.ok) {
            var data = await response.json();   // for res.ok() or res.json()
            // alert(data.message);
            window.location = data.url;
        } else if (response.status == 401) {    //wrong password
            var data = await response.text();   // for res.send()
            alert(data);
        } else {
            alert(response.statusText);
        }

    };
</script>
