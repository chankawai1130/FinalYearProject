                                                <option value="Year 1" <% if( application.entryYear1 !="" ) { %>
                                                    <%=(application.entryYear1=='Year 1' )? 'selected' :'' %>
                                                        <% } %>
                                                            >Year 1
                                                </option>
                                                <option value="Year 3" <% if( application.entryYear1 !="" ) { %>
                                                    <%=(application.entryYear1=='Year 3' )? 'selected' :'' %>
                                                        <% } %>
                                                            >Year 3
                                                </option>
                                            </select>
                                        </td>
                                    </tr>
            
                                    <tr>
                                        <td class="table-content" style="text-align: center;">2</td>
