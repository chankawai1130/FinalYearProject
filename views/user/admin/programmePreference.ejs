                                                    <%=(application.entryYear3=='Year 3' )? 'selected' :'' %>
                                                        <% } %>
                                                            >Year 3
                                                </option>
                                            </select>
                                        </td>
                                    </tr>
                                </table>
            
                                <div>
                                    <br>
